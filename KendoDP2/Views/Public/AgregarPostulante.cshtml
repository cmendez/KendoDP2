    }

    function Postular(){
        $.ajax({
            url: '@Url.Action("Postular", "Public")',
                dataType: 'JSON',
                type: 'POST',
                data: { ofertaID : @ofertaID},
            success: function(response){
                alert("Postulacion efectuada con exito");
                $("#datagrid").data('kendoGrid').dataSource.read();
                $("#Details2").data('kendoWindow').close();
            }
            });
    }

    function Cancelar(){
        $.ajax({
            success: function(response){
                $("#Details2").data('kendoWindow').close();
            }})}
</script>
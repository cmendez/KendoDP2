                @Html.HiddenFor(m => m.CurriculumVitaeID)
                <input type="file" id="Archivo2" name="Archivo2" />
                <script>
                    $("#Archivo2").kendoUpload({
                        multiple: false,
                        showFileList: true,
                        localization: {
                            select: 'Seleccione archivo PDF'
                        },
                        async: {
                            saveUrl: '@Url.Action("UploadPDF", "Misc", new {Area = ""})',
                            autoUpload: true
                        },
                        success: function (e) {

@using Kendo.Mvc.UI
@using KendoDP2.Areas.Organizacion.Models

@{
    ViewBag.Title = "Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ColaboradorXPuesto> puestos = (List<ColaboradorXPuesto>)ViewBag.ColaboradorXPuesto;
    ColaboradorDTO c = (ColaboradorDTO)ViewBag.ColaboradorDTO;
}

@{Html.RenderPartial("Titulo", new KendoDP2.Models.Helpers.PageTitle("Historial", "Resumen de puestos laborales"));}
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>Resumen</div>
    </div>
    <div class="portlet-body form">
        <div class="form-horizontal form-view">
            <h3>Ver Información - @c.NombreCompleto </h3>
            <fieldset>
                <legend>Información Personal</legend>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="firstName">Nombre:</label>
                            <div class="controls">
                                <span class="text">@c.Nombre</span>
                            </div>
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="firstName">Apellidos:</label>
                            <div class="controls">
                                <span class="text">@c.ApellidoPaterno  @c.ApellidoMaterno</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="NumeroDocumento">Nro Doc:</label>
                            <div class="controls">
                                <span class="text">@c.NumeroDocumento</span>
                            </div>
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="Estudios">Estudios:</label>
                            <div class="controls">
                                <span class="text">@c.CentroEstudios</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="Email">Email:</label>
                            <div class="controls">
                                <span class="text">@c.CorreoElectronico</span>
                            </div>
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="Telefono">Telefono:</label>
                            <div class="controls">
                                <span class="text">@c.Telefono</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="Sueldo">Sueldo:</label>
                            <div class="controls">
                                <span class="text">@c.Sueldo</span>
                            </div>
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="Puesto">Puesto:</label>
                            <div class="controls">
                                <span class="text">@c.Puesto</span>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
    
<div class="container-fluid">

<h3><b>Linea de Carrera</b></h3>

<div class="row-fluid" id="sortable_portlets">
    @for (int i = 0; i <= puestos.Count;i+=3 )
    {
        <div class="span4 column sortable">

            @try{
                if (@puestos[i].ID == 0) { }
            <div class="portlet box green">
                <div class="portlet-title">
                    <h4><i class="icon-reorder"></i>Area: @puestos[i].Puesto.Area.Nombre</h4>
                    <h4><i class="icon-reorder"></i>Puesto: @puestos[i].Puesto.Nombre</h4>
                </div>
                <div class="portlet-body">
                    <div>
                        <table>
                            <tr>
                                <th>Fecha Inicio:</th>
                                <td>@puestos[i].FechaIngresoPuesto</td>
                            </tr>
                            <tr>
                                <th>Fecha Fin:</th>
                                <td>@puestos[i].FechaSalidaPuesto</td>
                            </tr>
                            <tr>
                                <th>Sueldo</th>
                                <td>@puestos[i].Sueldo</td>
                            </tr>
                            <tr>
                                <th>Comentario</th>
                                <td>@puestos[i].Comentarios</td>
                            </tr>
                        </table>
                    </div>
		        </div>
            </div>
            }
            catch (Exception) { }


            @try{
                if (@puestos[i+1].ID == 0) { }
            <div class="portlet box green">
                <div class="portlet-title">
                    <h4><i class="icon-reorder"></i>Area: @puestos[i+1].Puesto.Area.Nombre</h4>
                    <h4><i class="icon-reorder"></i>Puesto: @puestos[i+1].Puesto.Nombre</h4>
                </div>
                <div class="portlet-body">
                    <div>
                        <table>
                            <tr>
                                <th>Fecha Inicio:</th>
                                <td>@puestos[i+1].FechaIngresoPuesto</td>
                            </tr>
                            <tr>
                                <th>Fecha Fin:</th>
                                <td>@puestos[i+1].FechaSalidaPuesto</td>
                            </tr>
                            <tr>
                                <th>Sueldo</th>
                                <td>@puestos[i+1].Sueldo</td>
                            </tr>
                            <tr>
                                <th>Comentario</th>
                                <td>@puestos[i+1].Comentarios</td>
                            </tr>
                        </table>
                    </div>
		        </div>
            </div>
            }
            catch (Exception) {  }

            @try{
                if (@puestos[i+2].ID == 0) { }
            <div class="portlet box green">
                <div class="portlet-title">
                    <h4><i class="icon-reorder"></i>Area: @puestos[i+2].Puesto.Area.Nombre</h4>
                    <h4><i class="icon-reorder"></i>Puesto: @puestos[i+2].Puesto.Nombre</h4>
                </div>
                <div class="portlet-body">
                    <div>
                        <table>
                            <tr>
                                <th>Fecha Inicio:</th>
                                <td>@puestos[i+2].FechaIngresoPuesto</td>
                            </tr>
                            <tr>
                                <th>Fecha Fin:</th>
                                <td>@puestos[i+2].FechaSalidaPuesto</td>
                            </tr>
                            <tr>
                                <th>Sueldo</th>
                                <td>@puestos[i+2].Sueldo</td>
                            </tr>
                            <tr>
                                <th>Comentario</th>
                                <td>@puestos[i+2].Comentarios</td>
                            </tr>
                        </table>
                    </div>
		        </div>
            </div>
            }
            catch (Exception) {  }
    </div>
    }


</div>

</div>
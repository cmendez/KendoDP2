@using Kendo.Mvc.UI
@using KendoDP2.Areas.Organizacion.Models
@using KendoDP2.Areas.Evaluacion360.Models
@{
    ViewBag.Title = "Evaluación";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ColaboradorDTO evaluado = ViewBag.evaluado;
    int tablaEvaluadoresID = ViewBag.instanciaEvaluadores;
}

@{Html.RenderPartial("Titulo", new KendoDP2.Models.Helpers.PageTitle("Evaluación", "Rinda sus evaluaciones asignadas."));}

<script type="text/x-kendo-tmpl" id="template">
    <table class="table table-hover table-striped table-bordered" >
        <tbody>
            <tr>
                <td>
                    <div class="span3 responsive">
                        <dl>
                            <dt>Capacidad: </dt> <dd>#:TextoPregunta#</dd>        
                        </dl>
                    </div>
                </td>
                <td style="width: 200px">
                    <div class="span3 responsive" id="estadoCalificacion__#:ID#" style="display:none; padding-top: 20px;">
                        <a class = "btn red icn-only mini" onClick="MostrarRating(#:ID#)"><i class="icon-pencil icon-white"></i></a>
                    </div>
                    <div class="row-fluid"   id="rating__#:ID#" style="padding-top: 20px;">
                        <span class="rating">
                            <span class="star" id="strella1__#:ID#" onClick="GuardarPuntuacionPorPregunta(#:ID#, 100, #:Peso#, rating__#:ID#)"></span>
                            <span class="star" id="strella2__#:ID#" onClick="GuardarPuntuacionPorPregunta(#:ID#, 80, #:Peso#, rating__#:ID#)"></span>
                            <span class="star" id="strella3__#:ID#" onClick="GuardarPuntuacionPorPregunta(#:ID#, 60, #:Peso#, rating__#:ID#)"></span>
                            <span class="star" id="strella4__#:ID#" onClick="GuardarPuntuacionPorPregunta(#:ID#, 40, #:Peso#, rating__#:ID#)"></span>
                            <span class="star" id="strella5__#:ID#" onClick="GuardarPuntuacionPorPregunta(#:ID#, 20, #:Peso#, rating__#:ID#)"></span>
                        </span>
                    </div>
                </td>
            </tr>
        </tbody>
     </table>
</script>
<style>
 .selectedS {
  
  color: red;
}
</style>
<div class="portlet box green">
     <div class="portlet-title">
        <h4><i class="icon-reorder"></i>Procesos de evaluación</h4>
        <div class="tools">
	        <a href="javascript:;" class="collapse"></a>
        </div>
	</div>
     <div class="portlet-body">
        <!--<div>
            <a class="k-button k-button-icontext k-add-button" href="@Url.Action("GuardarEvaluacion", "Evaluacion", new { tablaEvaluadoresID= tablaEvaluadoresID})"><span class="k-icon k-add"></span>Terminar evaluación</a>
        </div>  -->
        <h5> Datos del evaluado: </h5>
        <div class="k-pager-wrap">
            <div class="row-fluid">
                <div class="span8 profile-info">
                    <h3>@evaluado.NombreCompleto</h3>
                    <p>@evaluado.Puesto</p>
                    <p>@evaluado.Area</p>
                    <ul class="unstyled inline">
                        <li><i class="icon-calendar"></i> @evaluado.FechaIngreso</li>
                        <li><i class="icon-map-marker"></i> </li>
                        <!--<li><i class="icon-star"></i> Cantinflas </li> -->
                    </ul>
                </div>
                <!--end span8-->
            </div>
            <!--end row-fluid-->
        </div>
         <!--end k-pager-wrap-->

         <h5> Contenido de evaluación: </h5> 

        @(Html.Kendo().ListView<Capacidad>()
            .Name("Evaluacion")
            .TagName("div")
            .ClientTemplateId("template")
            .DataSource(dataSource => dataSource
                .Model(model => { model.Id(p => p.ID); }) @*model => model.Id("ID"))*@
                .PageSize(6)
                .Read(read => read.Action("Editing_ReadCapEvaluacion", "ProcesoEvaluacion" ,  new { puestoID= evaluado.PuestoID, tablaEvaluadoresID = tablaEvaluadoresID }))
            )
            .Pageable()
            .Editable()
        )
        <div> <!-- k-button k-button-icontext k-add-button-->
            <a class="btn green" href="@Url.Action("GuardarEvaluacion", "Evaluacion", new { tablaEvaluadoresID= tablaEvaluadoresID})"><span class="icon-ok"></span>Terminar evaluación</a>
        </div>
    </div>  
   
</div>

<script type="text/javascript">
    function MostrarRating(id) {
        $("#rating__"+id).css("display", "block");
        $("#estadoCalificacion__"+id).css("display", "none");
    }

    function GuardarPuntuacionPorPregunta(preguntaIDParam, puntuacion, peso, idElem) {
        var puntuacionParam = puntuacion*peso;
        $.ajax({
           url: '@Url.Action("GuardarPuntuacionPregunta", "ProcesoEvaluacion", new { Area = "Evaluacion360"})',
            dataType: 'JSON',
            type: 'POST',
            data: { preguntaID : preguntaIDParam, puntuacion : puntuacionParam },
            success: function(response) {
                $("#rating__" + preguntaIDParam).css("display", "none");
                $("#estadoCalificacion__" + preguntaIDParam).css("display", "block");
            }
        });
    }

</script>
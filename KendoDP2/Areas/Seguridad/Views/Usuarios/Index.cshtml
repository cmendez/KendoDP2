@using Kendo.Mvc.UI
@using KendoDP2.Models.Seguridad

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderPartial("Titulo", new KendoDP2.Models.Helpers.PageTitle("Usuarios", "Administre los atributos de los usuarios"));}

<div class="portlet box green">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>Roles</h4>
        <div class="tools">
	        <a href="javascript:;" class="collapse"></a>
        </div>
	</div>
    <div class="portlet-body">
        @(Html.Kendo().Grid<UsuarioDTO>()
            .Name("Usuariogrid")
            .Columns(columns =>
            {
                columns.Bound(p => p.ID).Width(80).Visible(true);
                columns.Bound(p => p.UserName).Width(200);
                columns.Bound(p => p.password).Width(200);
                columns.Command(command => { command.Edit(); command.Destroy(); }).Width(160);
            })
            .Editable(editable => editable.Mode(GridEditMode.PopUp))
            .Pageable()
            .Sortable()
            .Scrollable()
            .HtmlAttributes(new { style = "height:430px;" })
            .DataSource(dataSource => dataSource
                .Ajax()
                .PageSize(20)
                .Model(
                    model => 
                        {
                            model.Id(p => p.ID);
                            model.Field(p => p.ID).Editable(false);
                        }
                )
                .Read(read => read.Action("Read", "Usuarios"))
                .Update(update => update.Action("Update", "Usuarios"))
                .Destroy(update => update.Action("Destroy", "Usuarios"))
            )
        )
    </div>
</div>
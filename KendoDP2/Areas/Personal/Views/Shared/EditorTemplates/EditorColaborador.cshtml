<script type="text/javascript">
    var last_container = null;

    $(document).ready(function () {
        var dropDownListTipoDocumentos = $("#DropDownListTipoDocumento").data("kendoDropDownList");
        var tipoDocumentoID = dropDownListTipoDocumentos.dataItem(dropDownListTipoDocumentos.selectedIndex).ID;
        last_container = $("#tabs-for-TipoDocumento-" + tipoDocumentoID);
    });

    function onDropDownListTipoDocumentosChange(e) {
        var dropDownListTipoDocumentos = $("#DropDownListTipoDocumento").data("kendoDropDownList");
        var tipoDocumentoID = dropDownListTipoDocumentos.dataItem(dropDownListTipoDocumentos.selectedIndex).ID;

        last_container.hide();
        last_container = $("#tabs-for-TipoDocumento-" + tipoDocumentoID);
        last_container.show();
    }

   </script>
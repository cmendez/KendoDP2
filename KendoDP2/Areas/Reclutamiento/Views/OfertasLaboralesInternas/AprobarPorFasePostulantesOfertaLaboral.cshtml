@using Kendo.Mvc.UI
@using KendoDP2.Areas.Organizacion.Models
@using KendoDP2.Areas.Reclutamiento.Models

@{
    ViewBag.Title = "Lista Postulantes Por Oferta Laboral";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IList<AreaDTO> areas = ViewBag.areas;
    IList<EstadosSolicitudOfertaLaboralDTO> estadosSolicitudOferta = ViewBag.estadosSolicitudOferta;
    IList<PuestoDTO> puestos = ViewBag.puestos;
    int ofertaID = ViewBag.ofertaID;

}
@{Html.RenderPartial("Titulo", new KendoDP2.Models.Helpers.PageTitle("Postulantes por Oferta Laboral Interna", "Revise sus datos y apruebelos para su evaluación"));}

<div class="portlet box green">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>Postulantes por Oferta Laboral Interna</h4>
        <div class="tools">
	        <a href="javascript:;" class="collapse"></a>
        </div>
	</div>
    
    <div class="portlet-body">
            <a id="hidden-link" class="hidden" href="#" target="_blank"></a>
           <div class="row-fluid">
               <div class="span2">@Html.ActionLink("Ir a fase 1", "VerPostulantesFase1", "OfertasLaboralesInternas", new { ofertaLaboralID = ofertaID }, new {@class = "btn yellow" })</div>
               <div class="span2">@Html.ActionLink("Ir a fase 2", "VerPostulantesFase2", "OfertasLaboralesInternas", new { ofertaLaboralID = ofertaID }, new {@class = "btn blue" })</div>
               <div class="span2">@Html.ActionLink("Ir a fase 3", "VerPostulantesFase3", "OfertasLaboralesInternas", new { ofertaLaboralID = ofertaID }, new {@class = "btn red" })</div>
           </div>
           <div class="row-fluid">
            @(Html.Kendo().Grid<OfertaLaboralXPostulanteDTO>()
                .Name("PostulantesPorOfertaLaboralInternaGrid")
                .Columns(columns =>
                    {
                        columns.Bound(p => p.Postulante.Colaborador.NombreCompleto);
                        columns.Bound(p => p.Postulante.Colaborador.CorreoElectronico);
                        columns.Bound(p => p.EstadoPostulantePorOfertaNombre);
                        columns.Template(@<text></text>).Title("Curriculum Vitae").ClientTemplate(
                        "<a class='k-button' href='javascript:bajarCV(#=Postulante.Colaborador.CurriculumVitaeID#);'>Descargar CV</a>");
                        columns.Command(command =>
                        {
                            command.Custom("Ver").Click("verPostulante").SendDataKeys(true);
                            command.Custom("Aprobar").Click("aprobarFase1").SendDataKeys(true);
                        }).Width(200);
                    }
                        )
                            .Editable(editable => editable
                            .Mode(GridEditMode.PopUp)
                            .Window(w => { w.Title("Ver Postulante"); w.Width(900); })

                        )
                        .Groupable()
                        .Pageable(paper => paper.Refresh(true))
                        .Filterable()
                        .Sortable()
                        .Scrollable(p => p.Height(330))
                        .DataSource(dataSource => dataSource
                            .Ajax()
                            .PageSize(20)
                            .Model(model => model.Id(p => p.ID))
                            .Read(read => read.Action("ReadListaPostulantes", "OfertasLaboralesInternas", new { ofertaID = ofertaID }))
                        )
                       )
        </div>
    </div>
</div>

@(Html.Kendo().Window().Name("Details")
    .Title("Rechazar Postulante")
    .Visible(false)
    .Modal(true)
    .Draggable(true)
    .Width(900)

)

@(Html.Kendo().Window().Name("Details2")
    .Title("Postulante Por Oferta Laboral")
    .Visible(false)
    .Modal(true)
    .Draggable(true)
    .Width(900)

)

@(Html.Kendo().Window().Name("Details3")
    .Title("Seleccionar Fecha de la Evaluación")
    .Visible(false)
    .Modal(true)
    .Draggable(true)
    .Width(500)

)

<script>

    function recargaGrid(){
        $("#PostulantesPorOfertaLaboralInternaGrid").data('kendoGrid').dataSource.read();
    }

    function aprobarFase1(e) {
        
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        ID = dataItem.ID;
        var wnd = $("#Details3").data("kendoWindow");
        $("#Details3").load("@Url.Action("GetViewSeleccionFechaFase1","OfertasLaboralesInternas", new{Area = "Reclutamiento"})", {ofertaID : @ofertaID, postulanteXOfertaID : ID }, function () {
            wnd.center().open();
        });
    
   }

    function rechazarPase(e) {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        ID = dataItem.ID;
        var wnd = $("#Details").data("kendoWindow");
        $("#Details").load("@Url.Action("GetViewMotivosRechazo","OfertasLaboralesInternas", new{Area = "Reclutamiento"})", {ofertaID : @ofertaID, postulanteXOfertaID : ID }, function () {
            wnd.center().open();
        });
    }

    function bajarCV(curriculumVitaeID) {
        if (curriculumVitaeID == '0' || curriculumVitaeID == 0)
            alert("No hay ningun curriculum registrado");
        else {
            $("#hidden-link").attr("href", "/Organizacion/Colaboradores/BajarCurriculum?curriculumVitaeID=" + curriculumVitaeID);
            $("a#hidden-link")[0].click();
        }
    }

    function verPostulante(e) {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        ID = dataItem.ID;
        var wnd = $("#Details2").data("kendoWindow");
        $("#Details2").load("@Url.Action("GetViewPostulanteInterno","OfertasLaboralesInternas", new{Area = "Reclutamiento"})", {ofertaID : @ofertaID, postulanteXOfertaID : ID }, function () {
            wnd.center().open();
        });
    }
</script>

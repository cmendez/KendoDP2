                </div>
                <div class="span7 responsive">
                    @Html.DropDownListFor(model => model.ModoPublicacionID, new SelectList(modosSolicitudOferta, "ID", "Descripcion"), new { style = "width:100%", data_placeholder="Seleccione" } )
                </div>
            </div>


            <div class="row-fluid">
                <div class="span5">
                    <div class="editor-label" style="width: 100%; text-align: left;">@Html.LabelFor(model => model.EstadoSolicitudOfertaLaboralID)</div>
                </div>
                <div class="span7 responsive">
                    @Html.DropDownListFor(model => model.EstadoSolicitudOfertaLaboralID, new SelectList(estadosSolicitudOferta, "ID", "Descripcion"), new { style = "width:100%", data_placeholder="Seleccione" } )
